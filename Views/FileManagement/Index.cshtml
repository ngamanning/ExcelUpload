@model ExcelUpload.Models.FormModel
<h1 class="display-4">Welcome</h1>
<p>Please upload your file here (Excel format only)</p>
<form id="frm-upload-excel" asp-action="UploadExcelToDb" method="post" enctype="multipart/form-data">      
    <div class="from-group row flex-nowrap">
        <div class="row w-100">
            <input type="file" asp-for="File" id="file" name="File" class="form-control flex-grow-1">
            <span asp-validation-for="File" class="text-danger d-block mt-2"></span>
        </div>
        <button type="submit" class="btn btn-primary d-block align-self-baseline">Upload</button>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
